@{
    ViewBag.Title = "Insurance Exercise";
}

<div class="jumbotron">
    <h1 style="text-align:center">Car Insurance Exercise</h1>
    <p style="text-align:center">Fill out the form below for an estimate.</p>
    @using (Html.BeginForm("ProcessInsuranceBuyer", "Home", FormMethod.Post))
    {
        <div id="inputRow" class="form-row">
            <div class="col">
                <label for="inputFirstName">First Name</label>
                <input name="FirstName" type="text" class="form-control" placeholder="First name">
            </div>
            <div class="col">
                <label for="inputLastName">Last Name</label>
                <input name="LastName" type="text" class="form-control" placeholder="Last name">
            </div>
        </div>
        <div id="inputRow" class="form-row">
            <div class="col">
                <label for="inputDateOfBirth">Date of Birth</label>
                <input name="DateOfBirth" type="date" class="form-control">
            </div>
            <div class="col">
                <label for="inputEmail">Email</label>
                <input name="EmailAddress" type="email" class="form-control" placeholder="Email">
            </div>
        </div>
        <div id="inputRow" class="form-row">
            <div class="col">
                <label for="inputCarMake">Who makes your car?</label>
                <input name="CarMake" type="text" class="form-control" placeholder="Car Make">
            </div>
            <div class="col">
                <label for="inputCarModel">What model is it?</label>
                <input name="CarModel" type="text" class="form-control" placeholder="Car Model">
            </div>
        </div>
        <div id="inputRow" class="form-row">
            <div class="col">
                <label for="inputCarYear">What year was it made?</label>
                <input name="CarYear" type="date" class="form-control" placeholder="Car Year">
            </div>
            <div class="col">
                <label for="inputSpeedingTickets">How many speeding tickets have you had?</label>
                <input name="SpeedingTickets" type="number" class="form-control" placeholder="0">
            </div>
        </div>
        <div id="inputRow" class="form-row">
            <div class="col">
                <label for="inputCoverageChoice">Choose your desired level of protection</label>
                <select name="CoverageVsLiability" class="form-control">
                    <option name="FullCoverage">Full Coverage</option>
                    <option name="LiabilityOnly">Liability Only</option>
                </select>
            </div>
            <div class="col">
                <label for="inputHadDUI">Have you ever received a DUI?</label>
                <select name="HasHadDUI" class="form-control">
                    <option name="No">No</option>
                    <option name="Yes">Yes</option>
                </select>
            </div>
        </div>
        <input id="submit" class="btn btn-primary btn-block" type="submit" value="Submit">
    }
</div>
